@model IEnumerable<ERPSoft.DATA.Models.Produto>


@{
    ViewData["Title"] = "Index";
}

<div class="d-flex justify-content-between align-items-center">
    <h3>Produtos</h3>
    <a asp-action="Create" class="bi bi-plus-circle btn btn-outline-primary">Adicionar</a>
</div>
<br></br>
<table class="table">
    <thead>
        <tr text-center>
            <th>
                @Html.DisplayNameFor(model => model.Foto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ean)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Preco)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EstoqueMin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EstoqueAtual)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Unidade)
            </th>
            <th>
                Total
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr text-center>
                <td>
                <img src="@Html.DisplayFor(modelItem => item.Foto)" width="70" height="70">
            </td>
                <td style="vertical-align: middle;">
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
                <td style="vertical-align: middle;">
                @Html.DisplayFor(modelItem => item.Ean)
            </td>
            <td style="vertical-align: middle;" class="text-center">
                @string.Format("{0:C}", item.Preco)
            </td>
            <td style="vertical-align: middle;" class="text-center">
                @Html.DisplayFor(modelItem => item.EstoqueMin)
            </td>
            <td style="vertical-align: middle;" class="text-center">
                    @Html.DisplayFor(modelItem => item.EstoqueAtual)
            </td>
            <td style="vertical-align: middle;" class="text-center">
                    @Html.DisplayFor(modelItem => item.Unidade)
            </td>
            <td style="vertical-align: middle;" class="text-center">
                    @string.Format("{0:C}", item.PrecoTotal)
            </td>
            <td style="vertical-align: middle;">
                <a asp-action="Edit" class="bi bi-pencil-square btn btn-outline-warning" asp-route-id="@item.Id">Editar</a> |
                <a asp-action="Delete" class="bi bi-trash btn btn-outline-danger" asp-route-id="@item.Id">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
