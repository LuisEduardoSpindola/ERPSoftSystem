@using ERPSoft.DATA.Models;
@model ERPSoft.DATA.Models.Saida

@{
    ViewData["Title"] = "Create";
}

<h4>Cadastrar Saida</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="EstoqueSaida" class="control-label"></label>
                <input asp-for="EstoqueSaida" class="form-control" />
                <span asp-validation-for="EstoqueSaida" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Data" class="control-label"></label>
                <input asp-for="Data" class="form-control" />
                <span asp-validation-for="Data" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdSaidaFornecedor" class="control-label"></label>
                <select asp-for="IdSaidaFornecedor" class="form-control">
                    <option value="">Selecione um fornecedor</option>
                    @if (ViewBag.Fornecedores != null)
                    {
                        @foreach (var fornecedor in (ViewBag.Fornecedores as List<Fornecedor>))
                        {
                            <option value="@fornecedor.Id">@fornecedor.Nome</option>
                        }
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="IdSaidaProduto" class="control-label"></label>
                <select asp-for="IdSaidaProduto" class="form-control">
                    <option value="">Selecione o Produto</option>
                    @if (ViewBag.Produtos != null)
                    {
                        @foreach (var fornecedor in (ViewBag.Produtos as List<Produto>))
                        {
                            <option value="@fornecedor.Id">@fornecedor.Nome</option>
                        }
                    }
                </select>
            </div>
            <br></br>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-outline-primary" /> | <a asp-action="Index" class="bi bi-skip-backward-fill btn btn-outline-primary"> Voltar</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
