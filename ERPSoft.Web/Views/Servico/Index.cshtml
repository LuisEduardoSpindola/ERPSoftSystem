@model IEnumerable<ERPSoft.DATA.Models.Servicos>
@{
    ViewData["Title"] = "Index";
}



<div class="d-flex justify-content-between align-items-center">
    <h3>Serviços</h3>
    <a asp-action="Create" class="bi bi-plus-circle btn btn-outline-primary">Adicionar</a>
</div>
<br></br>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Data)
            </th>
            <th>
                Nome do Fornecedor
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Data)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NomeFornecedor)
            </td>
            <td style="vertical-align: middle;">
                    <a asp-action="Edit" class="bi bi-pencil-square btn btn-outline-warning" asp-route-id="@item.Id">Editar</a>
            </td>
        </tr>
}
    </tbody>
</table>
