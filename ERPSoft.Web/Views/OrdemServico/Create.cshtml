@using ERPSoft.DATA.Models;
@model ERPSoft.DATA.Models.OrdemServico

@{
    ViewData["Title"] = "Create";
}


<h4>Cadastrar Ordem de Servico</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IdOrdemPedidoServico" class="control-label"></label>
                <select asp-for="IdOrdemPedidoServico" class="form-control">
                    <option value="">Selecione o Código do Pedido</option>
                    @if (ViewBag.PedidoServico != null)
                    {
                        @foreach (var servico in (ViewBag.PedidoServico as List<PedidoServico>))
                        {
                            if (servico.StatusServico == "Aguardando")
                            {
                                <option value="@servico.Id">@servico.Cod</option>
                            }
                        }
                    }
                </select>

            </div>
            <div class="form-group">
                <label asp-for="IdOrdemFornecedor" class="control-label"></label>
                <select asp-for="IdOrdemFornecedor" class="form-control">
                    <option value="">Selecione o Fornecedor</option>
                    @if (ViewBag.Fornecedores != null)
                    {
                        @foreach (var produto in (ViewBag.Fornecedores as List<Fornecedor>))
                        {
                            <option value="@produto.Id">@produto.Nome</option>
                        }
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Total" class="control-label"></label>
                <input asp-for="Total" class="form-control" />
                <span asp-validation-for="Total" class="text-danger"></span>
            </div>
            <br></br>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-outline-primary" /> | <a asp-action="Index" class="bi bi-skip-backward-fill btn btn-outline-primary"> Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
