@using ERPSoft.DATA.Models;
@model ERPSoft.DATA.Models.Entrada

@{
    ViewData["Title"] = "Edit";
}

<h4>Editar Entrada</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="NotaFiscal" class="control-label"></label>
                <input asp-for="NotaFiscal" class="form-control" />
                <span asp-validation-for="NotaFiscal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NomeDeposito" class="control-label"></label>
                <input asp-for="NomeDeposito" class="form-control" />
                <span asp-validation-for="NomeDeposito" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataCadastro" class="control-label"></label>
                <input asp-for="DataCadastro" class="form-control" />
                <span asp-validation-for="DataCadastro" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdEntradaFornecedor" class="control-label"></label>
                <select asp-for="IdEntradaFornecedor" class="form-control">
                    <option value="">Selecione um fornecedor</option>
                    @if (ViewBag.Fornecedores != null)
                    {
                        @foreach (var fornecedor in (ViewBag.Fornecedores as List<Fornecedor>))
                        {
                            <option value="@fornecedor.Id">@fornecedor.Nome</option>
                        }
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="IdEntradaProduto" class="control-label"></label>
                <select asp-for="IdEntradaProduto" class="form-control">
                    <option value="">Selecione o Produto</option>
                    @if (ViewBag.Produtos != null)
                    {
                        @foreach (var fornecedor in (ViewBag.Produtos as List<Produto>))
                        {
                            <option value="@fornecedor.Id">@fornecedor.Nome</option>
                        }
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="EntradaQtda" class="control-label"></label>
                <input asp-for="EntradaQtda" class="form-control" />
                <span asp-validation-for="EntradaQtda" class="text-danger"></span>
            </div>
            <br></br>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-outline-warning" /> | <a asp-action="Index" class="bi bi-skip-backward-fill btn btn-outline-primary"> Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
