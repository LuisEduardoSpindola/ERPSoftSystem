@model IEnumerable<ERPSoft.DATA.Models.Entrada>

@{
    ViewData["Title"] = "Index";
}

<div class="d-flex justify-content-between align-items-center">
    <h3>Entradas</h3>
    <a asp-action="Create" class="bi bi-plus-circle btn btn-outline-primary">Adicionar</a>
</div>
<br></br>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NotaFiscal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NomeDeposito)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataCadastro)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NomeFornecedor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NomeProduto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EntradaQtda)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NotaFiscal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NomeDeposito)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataFormatada)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NomeFornecedor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NomeProduto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EntradaQtda)
            </td>
                <td style="vertical-align: middle;">
                    <a asp-action="Edit" class="bi bi-pencil-square btn btn-outline-warning" asp-route-id="@item.Id">Editar</a> |
                    <a asp-action="Delete" class="bi bi-trash btn btn-outline-danger" asp-route-id="@item.Id">Deletar</a>
                </td>
        </tr>
}
    </tbody>
</table>
